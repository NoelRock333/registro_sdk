<p id="notice"><%= notice %></p>

<h1>Aisstentes al SDK</h1>
<%= link_to 'Importar asistentes', new_import_path, class: 'btn btn-link' %>
<%= link_to 'Registrar asistente', new_assistant_path, class: 'btn btn-success' %>
<table class="table table-striped assistants">
  <thead>
    <tr>
      <th>CÃ³digo</th>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Email</th>
      <th>Metodo de pago</th>
      <th>Boletos</th>
      <th>Fecha de reservacion</th>
      <th>Asistencia</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @assistants.each do |assistant| %>
      <tr class="assistant-row <%= assistant.attended ? 'attended' : '' %>">
        <td><%= assistant.reservation_code %></td>
        <td><%= assistant.name %></td>
        <td><%= assistant.last_name %></td>
        <td><%= assistant.email %></td>
        <td><%= assistant.pay_method %></td>
        <td><%= assistant.ticket_quantity %></td>
        <td><%= assistant.reservation_date %></td>
        <td>
          <div class="mark-as-attended" data-id="<%= assistant.id %>">
            <%= "#{assistant.attended ? 'Si' : 'No :(' }" %>
          </div>
        </td>
        <td><%= link_to 'Mostrar', assistant %></td>
        <td><%= link_to 'Editar', edit_assistant_path(assistant) %></td>
        <!-- <td><%= link_to 'Destroy', assistant, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

